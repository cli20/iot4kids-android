<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adalaachref.iot4kids.FstFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/username"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="username"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />
        <Button
            android:id="@+id/btnDeconnect"
            android:text="logout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />
        <LinearLayout

            android:id="@+id/linearLayout4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="147dp"
            android:layout_marginStart="147dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:textSize="50px"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Play"
                android:textColor="@color/primary_dark"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/play"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/play" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_toRightOf="@+id/linearLayout4"
            android:layout_toEndOf="@+id/linearLayout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="50px"
                android:text="Learn"
                android:textColor="@color/primary_dark"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/learn"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/learn" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
