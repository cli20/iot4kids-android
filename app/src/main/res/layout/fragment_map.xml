<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:scrollbarStyle="insideOverlay">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="800dp"
                android:layout_height="600dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/map"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/level1"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="144dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="139dp"
                android:background="@drawable/level1"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/level2"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/level1"
                android:layout_alignStart="@+id/level1"
                android:layout_alignTop="@+id/level1"
                android:layout_marginLeft="119dp"
                android:layout_marginStart="119dp"
                android:background="@drawable/level2"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/level3"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/level2"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/level2"
                android:layout_toRightOf="@+id/level2"
                android:background="@drawable/level3"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/level4"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_below="@+id/level3"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/level3"
                android:layout_toRightOf="@+id/level3"
                android:background="@drawable/lvl4"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/level5"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:background="@drawable/lvl5"
                android:contentDescription="@string/todo"
                android:layout_below="@+id/level4"
                android:layout_toRightOf="@+id/level4"
                android:layout_toEndOf="@+id/level4" />

            <com.nhaarman.supertooltips.ToolTipRelativeLayout
                android:id="@+id/map_tooltipRelativeLayout"
                android:layout_width="800dp"
                android:layout_height="600dp">
            </com.nhaarman.supertooltips.ToolTipRelativeLayout>
                <ImageButton
                    android:id="@+id/level8"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/lvl8"
                    android:contentDescription="@string/todo"
                    android:layout_alignBottom="@+id/level6"
                    android:layout_toLeftOf="@+id/level3"
                    android:layout_toStartOf="@+id/level3" />

                <ImageButton
                    android:id="@+id/level6"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:background="@drawable/lvl6"
                    android:contentDescription="@string/todo"
                    android:layout_alignTop="@+id/level5"
                    android:layout_toRightOf="@+id/level5"
                    android:layout_toEndOf="@+id/level5"
                    android:layout_marginLeft="42dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="42dp" />

                <ImageButton
                    android:id="@+id/level7"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/level6"
                    android:layout_marginEnd="103dp"
                    android:layout_marginRight="103dp"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/level6"
                    android:layout_toStartOf="@+id/level6"
                    android:background="@drawable/lvl7"
                    android:contentDescription="@string/todo" />
            <ImageButton
                android:id="@+id/level9"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/lvl9"
                android:contentDescription="@string/todo"
                android:layout_below="@+id/level8"
                android:layout_toLeftOf="@+id/level7"
                android:layout_toStartOf="@+id/level7" />
            <ImageButton
                android:id="@+id/level10"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:background="@drawable/lvl10"
                android:contentDescription="@string/todo"
                android:layout_below="@+id/level7"
                android:layout_alignLeft="@+id/level5"
                android:layout_alignStart="@+id/level5" />
            <ImageButton
                android:id="@+id/level11"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/lvl11"
                android:contentDescription="@string/todo"
                android:layout_below="@+id/level7"
                android:layout_alignRight="@+id/level8"
                android:layout_alignEnd="@+id/level8" />



        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>




