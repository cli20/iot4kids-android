<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    tools:context="com.adalaachref.iot4kids.PuzzleFragment"
    android:id="@+id/frame1">


    <ImageView
        android:id="@+id/ard"
        android:layout_width="468dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"
       />


    <ImageButton
        android:id="@+id/btnPuzzle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/puzzle2"
        android:layout_above="@+id/btnSuiv"
        android:layout_toRightOf="@+id/ard"
        android:layout_toEndOf="@+id/ard"
        android:layout_marginBottom="33dp" />

    <Button
        android:id="@+id/btnSuiv"
        android:background="@color/primary"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/ard"
        android:layout_marginBottom="42dp"
        android:layout_toRightOf="@+id/ard"
        android:text="Next" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag the components to their right place"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:src="@drawable/tip" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress1"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_above="@+id/btnSuiv"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp" />

</RelativeLayout>
