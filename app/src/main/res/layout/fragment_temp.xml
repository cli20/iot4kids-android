<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adalaachref.iot4kids.TempFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Temperature Sensor"
                android:gravity="center"
                android:textSize="45px"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp" />
            <TextView
                android:id="@+id/temp1"
                android:text="Here we will turn the LED on if the temperature exceeds 20Â° else we turned it off"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textSize="30px"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp" />
            <TextView
                android:text="You will need :"
                android:id="@+id/temp2"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:textSize="30px"
                android:layout_below="@+id/temp1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />
            <TextView
                android:text="- Arduino Uno"
                android:id="@+id/temp3"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="- BreadBoard"
                android:id="@+id/temp4"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- LED"
                android:id="@+id/temp5"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- LM35 Temperature Sensor"
                android:id="@+id/temp6"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- Resistor"
                android:id="@+id/temp7"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="Circuit :"
                android:id="@+id/temp8"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/temp9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cap"
                android:layout_below="@id/temp8"/>
            <TextView
                android:text="Code :"
                android:id="@+id/temp10"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/temp9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/temp11"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/code3"
                android:layout_below="@id/temp10"/>
            <Button
                android:layout_below="@id/temp11"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@color/primary"
                android:text="Next"
                android:id="@+id/btnTemp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
