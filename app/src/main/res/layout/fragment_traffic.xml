<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adalaachref.iot4kids.trafficFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Traffic Light"
                android:gravity="center"
                android:textSize="45px"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp" />
            <TextView
                android:id="@+id/traffic1"
                android:text="Here we will turn the red LED on for 10 secondes then turn it off then turn the yellow LEd on for 3 secondes then turn it off then turn the green LED on for 10 secondes"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textSize="30px"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp" />
            <TextView
                android:text="You will need :"
                android:id="@+id/traffic2"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />
            <TextView
                android:text="- Arduino Uno"
                android:id="@+id/traffic3"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="- BreadBoard"
                android:id="@+id/traffic4"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- 3 LED"
                android:id="@+id/traffic5"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- Wires"
                android:id="@+id/traffic6"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="- 3 Resistors"
                android:id="@+id/traffic7"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="Circuit :"
                android:id="@+id/traffic8"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/traffic9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/simple"
                android:layout_below="@id/traffic8"/>
            <TextView
                android:text="Code :"
                android:id="@+id/traffic10"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="30px"
                android:layout_below="@+id/traffic9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/traffic11"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/code2"
                android:layout_below="@id/traffic10"/>
            <Button
                android:layout_below="@id/traffic11"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@color/primary"
                android:text="Next"
                android:id="@+id/btnTraffic"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
